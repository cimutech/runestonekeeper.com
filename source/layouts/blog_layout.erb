<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <!-- meta content='width=device-width' name='viewport' -->
    <%= stylesheet_link_tag 'homepage' %>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
    <!--[if lt IE 9]>
      <script type="text/javascript" src="/javascripts/PIE_IE678.js"></script>
    <![endif]-->
    <!--[if IE 9]>
      <script type="text/javascript" src="/javascripts/PIE_IE9.js"></script>
    <![endif]-->
    <script src="/javascripts/base.js"></script>
    <title><%= t(:title) %><%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
  </head>
  <body>
    <div id="head">
    </div>
    <div class='gradient'>
    </div>
    <div id="banner">
      <%= partial 'navbar' %>
    </div>
    <div id="wrap">

      <%= partial "sidebar" %>
  
      <div id="main" role="main">
        <div id="container">
          <div id="content">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
    <!--div id="footer">
      <div>Cimu Ltd.</div>
    </div -->
  </body>
</html>
